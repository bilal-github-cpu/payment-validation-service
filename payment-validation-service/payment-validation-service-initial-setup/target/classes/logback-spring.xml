<?xml version="1.0" encoding="UTF-8"?>
<configuration> 
    <property name="archive" value="D:\\ctws\\sep24ct\\logs\\payment-validation-service/archive"/> 
    
    <springProperty scope="context" name="log-path" source="log4j2.path"/>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>


    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder> 
            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [${springAppName}] %logger - %msg%n</pattern>
        </encoder>
    </appender>   

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:\\ctws\\sep24ct\\logs\\payment-validation-service/${springAppName}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--<fileNamePattern>D:\\ctws\\sep24ct\\logs\\payment-validation-service/${springAppName}.log.%d{yyyy-MM-dd_HH-mm}</fileNamePattern>-->
            <fileNamePattern>D:\\ctws\\sep24ct\\logs\\payment-validation-service/${springAppName}.log.%d{yyyy-MM-dd_HH}</fileNamePattern>
            <maxHistory>20</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [${springAppName}] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.Bilal" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <root level="INFO"> 
        <appender-ref ref="CONSOLE" />  
        <appender-ref ref="FILE" />
    </root>
</configuration>
